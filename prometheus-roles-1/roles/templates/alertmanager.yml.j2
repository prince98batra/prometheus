global:
  resolve_timeout: 5m
  smtp_smarthost: 'smtp.gmail.com:587'  
  smtp_from: 'prince03batra@gmail.com'  
  smtp_auth_username: '{{ smtp_auth_username }}'
  smtp_auth_password: '{{ smtp_auth_password }}'
  smtp_require_tls: true  

route:
  receiver: 'email-alert'
  group_by: ['alertname']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h

  inhibit_rules:
    - source_matchers:
        - alert_source="alertmanager-1"
      target_matchers:
        - alert_source="alertmanager-2"
      equal: ['alertname']

receivers:
  - name: "email-alert"
    email_configs:
      - to: 'prince98batra@gmail.com' 
        send_resolved: true
