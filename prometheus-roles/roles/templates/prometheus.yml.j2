global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'ec2_targets'
    static_configs:
{% for line in ec2_instances %}
{% set name_ip = line.split(':') %}
{% if name_ip | length == 2 and name_ip[1] | length > 0 %}
      - targets: ["{{ name_ip[1] }}:9100"]
        labels:
          instance: "{{ name_ip[0] }}"
{% endif %}
{% endfor %}

alerting:
  alertmanagers:
    - static_configs:
{% for line in ec2_instances %}
{% set name_ip = line.split(':') %}
{% if name_ip | length == 2 and name_ip[1] | length > 0 %}
        - targets: ["{{ name_ip[1] }}:9093"]
          labels:
            instance: "{{ name_ip[0] }}"
{% endif %}
{% endfor %}

rule_files:
  - /etc/prometheus/rules.yml
